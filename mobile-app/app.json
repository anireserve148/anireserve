{
  "expo": {
    "name": "AniReserve",
    "slug": "anireserve-mobile",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "anireserve",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#001F3F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anireserve.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "AniReserve a besoin d'accéder à vos photos pour vous permettre de mettre à jour votre photo de profil ou d'ajouter des photos à votre galerie de services professionnels. Par exemple, un coiffeur peut télécharger des photos de ses réalisations pour montrer son travail aux clients potentiels.",
        "NSPhotoLibraryAddUsageDescription": "AniReserve sauvegarde vos photos de profil et de galerie dans votre bibliothèque photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#001F3F"
      },
      "package": "com.anireserve.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f17de06e-8181-456b-8608-78e97287a150"
      }
    }
  }
}