generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// User Roles & Profiles
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("CLIENT") // CLIENT, PRO, ADMIN
  image     String?
  phoneNumber String?
  address     String?
  pushToken   String?
  
  // Relations
  clientReservations Reservation[] @relation("ClientReservations")
  reviews            Review[]        @relation("ClientReviews")
  favorites          Favorite[]
  clientConversations Conversation[] @relation("ClientConversations")
  proProfile         ProProfile?
  clientNotes        ClientNote[]   @relation("ClientNotes")
  clientTags         ClientTag[]    @relation("ClientTags")

  // Reset Password
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([role])
}

model ProProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  slug        String?  @unique  // Custom URL: /pro/john-doe
  bio         String?
  hourlyRate  Float    @default(50.0)
  verificationStatus String @default("VERIFIED") // PENDING, APPROVED, REJECTED

  
  cityId      String
  city        City     @relation(fields: [cityId], references: [id])

  // Zones d'intervention (Multi-villes)
  workCities  City[]   @relation("WorkCities")
  
  serviceCategories ServiceCategory[]
  services     ProService[]  // Custom services with pricing
  
  reservations Reservation[] @relation("ProReservations")
  reviews      Review[]
  favoritedBy  Favorite[]
  conversations Conversation[]
  availability Availability[]
  gallery      ProProfileGallery[]
  blockedPeriods BlockedPeriod[]
  promoCodes   PromoCode[]
  clientNotes  ClientNote[]
  clientTags   ClientTag[]
  
  googleCalendarEmail       String?
  googleCalendarToken       String?
  googleCalendarSyncEnabled Boolean @default(false)

  // Géo-localisation
  latitude                  Float?
  longitude                 Float?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([cityId])
  @@index([userId])
}

model BlockedPeriod {
  id            String      @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  
  startDate     DateTime    // Date de début du blocage
  endDate       DateTime    // Date de fin du blocage
  reason        String?     // Vacances, Congé maladie, Personnel, etc.
  
  createdAt     DateTime    @default(now())
  
  @@index([proProfileId])
  @@index([startDate, endDate])
}

model ProProfileGallery {
  id            String      @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  imageUrl      String
  caption       String?
  order         Int         @default(0)
  createdAt     DateTime    @default(now())
  
  @@index([proProfileId])
  @@index([order])
}

model Availability {
  id            String      @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  
  dayOfWeek     Int?        // 0=Sun, 1=Mon, etc. (for recurring)
  date          DateTime?   // For specific date overrides
  startTime     String      // "09:00"
  endTime       String      // "17:00"
  isAvailable   Boolean     @default(true)
}

// Directory Data
model City {
  id        String       @id @default(cuid())
  name      String
  zip       String
  region    String
  
  pros      ProProfile[]
  workPros  ProProfile[] @relation("WorkCities")
}

model ServiceCategory {
  id        String              @id @default(cuid())
  name      String              @unique
  icon      String?             // Lucide icon name
  parentId  String?
  parent    ServiceCategory?    @relation("SubCategories", fields: [parentId], references: [id], onDelete: SetNull)
  children  ServiceCategory[]   @relation("SubCategories")
  pros      ProProfile[]
  proServices ProService[]
  
  @@index([parentId])
}

// Booking System
model Reservation {
  id          String   @id @default(cuid())
  
  clientId    String
  client      User     @relation("ClientReservations", fields: [clientId], references: [id])
  
  proId       String
  pro         ProProfile @relation("ProReservations", fields: [proId], references: [id])
  
  startDate   DateTime
  endDate     DateTime
  status      String   @default("PENDING") // PENDING, CONFIRMED, REJECTED, CANCELLED, COMPLETED
  totalPrice  Float
  // Details
  serviceId   String?
  service     ProService? @relation(fields: [serviceId], references: [id])
  serviceName String?     // Fallback for custom/deleted services
  time        String?     // "10:00" format
  notes       String?     // Reason for cancellation or rejection

  // Automated email tracking
  reminderSent    Boolean @default(false)
  reviewRequested Boolean @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  review      Review?

  @@index([clientId])
  @@index([proId])
  @@index([serviceId])
  @@index([status])
  @@index([startDate])
}

model Review {
  id            String      @id @default(cuid())
  rating        Int         // 1-5 stars
  comment       String?
  proResponse   String?     // Réponse du pro à l'avis
  respondedAt   DateTime?   // Date de la réponse
  status        String      @default("APPROVED") // PENDING, APPROVED, REJECTED
  reservationId String      @unique
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  
  clientId      String
  client        User        @relation("ClientReviews", fields: [clientId], references: [id], onDelete: Cascade)
  
  proId         String
  pro           ProProfile  @relation(fields: [proId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime    @default(now())
  
  @@index([proId])
  @@index([clientId])
}

model Favorite {
  id        String      @id @default(cuid())
  
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  proId     String
  pro       ProProfile  @relation(fields: [proId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())

  @@unique([userId, proId])
  @@index([userId])
}

model ProService {
  id            String         @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile     @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  name          String         // Nom du service (ex: "Coupe + Brushing")
  categoryId    String?        // Catégorie optionnelle
  category      ServiceCategory? @relation(fields: [categoryId], references: [id])
  customPrice   Float          // Prix du service
  description   String?        // Description personnalisée du service
  duration      Int            // Durée en minutes
  isActive      Boolean        @default(true)
  reservations  Reservation[]
  createdAt     DateTime       @default(now())
  
  @@index([proProfileId])
  @@index([categoryId])
}

model Conversation {
  id          String    @id @default(cuid())
  clientId    String
  client      User      @relation("ClientConversations", fields: [clientId], references: [id], onDelete: Cascade)
  proId       String
  pro         ProProfile @relation(fields: [proId], references: [id], onDelete: Cascade)
  messages    Message[]
  lastMessageAt DateTime?
  createdAt   DateTime  @default(now())
  
  @@unique([clientId, proId])
  @@index([clientId])
  @@index([proId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  content        String
  imageUrl       String?
  type           String       @default("TEXT") // TEXT, IMAGE
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())
  
  @@index([conversationId])
  @@index([senderId])
}

model ProApplication {
  id              String   @id @default(cuid())
  
  // Informations personnelles
  firstName       String
  lastName        String
  email           String   @unique
  phone           String
  password        String   // Hashé
  
  // Informations professionnelles
  cityIds         String   // JSON array of city IDs
  categoryIds     String   // JSON array of category IDs
  
  // Documents
  idPhotoUrl      String   // Photo Teoudat Zehut
  
  // Statut: PENDING, APPROVED, REJECTED, NEEDS_DOCUMENTS
  status          String   @default("PENDING")
  adminNotes      String?  // Notes de l'admin
  reviewedBy      String?  // ID de l'admin qui a traité
  reviewedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([status])
  @@index([email])
}

model PromoCode {
  id            String      @id @default(cuid())
  code          String      // e.g., "BIENVENUE10"
  description   String?
  discountType  String      @default("PERCENTAGE") // PERCENTAGE, FIXED
  discountValue Float
  startDate     DateTime?
  endDate       DateTime?
  usageLimit    Int?
  usageCount    Int         @default(0)
  isActive      Boolean     @default(true)
  
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([proProfileId, code])
  @@index([proProfileId])
}

// CRM - Notes privées des professionnels sur leurs clients
model ClientNote {
  id            String      @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  
  clientId      String
  client        User        @relation("ClientNotes", fields: [clientId], references: [id], onDelete: Cascade)
  
  content       String      @db.Text // Note privée
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([proProfileId])
  @@index([clientId])
  @@index([proProfileId, clientId])
}

// CRM - Tags/Labels pour catégoriser les clients
model ClientTag {
  id            String      @id @default(cuid())
  proProfileId  String
  proProfile    ProProfile  @relation(fields: [proProfileId], references: [id], onDelete: Cascade)
  
  clientId      String
  client        User        @relation("ClientTags", fields: [clientId], references: [id], onDelete: Cascade)
  
  tag           String      // VIP, NOUVEAU, INACTIF, FIDELE, A_RELANCER, etc.
  
  createdAt     DateTime    @default(now())
  
  @@unique([proProfileId, clientId, tag])
  @@index([proProfileId])
  @@index([clientId])
  @@index([proProfileId, tag])
}
