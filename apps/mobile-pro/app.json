{
  "expo": {
    "name": "AniReserve Pro",
    "slug": "anireserve-pro",
    "version": "1.0.0",
    "scheme": "anireserve-pro",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#5B21B6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anireserve.pro",
      "infoPlist": {
        "NSCalendarsUsageDescription": "AniReserve Pro a besoin d'accéder à votre calendrier pour gérer vos rendez-vous.",
        "NSPhotoLibraryUsageDescription": "AniReserve Pro a besoin d'accéder à vos photos pour mettre à jour votre galerie professionnelle."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5B21B6"
      },
      "package": "com.anireserve.pro"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}